<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/partenaires">

    <EditText
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:id="@+id/editTextExterne"
        android:background="#75ffffff"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:singleLine="true"
        android:hint="@string/nouveau_externe"
        android:textSize="@dimen/size_text"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp" />

    <Spinner
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:id="@+id/spinnerExterne"
        android:layout_alignTop="@+id/editTextExterne"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#75ffffff"
        android:layout_marginRight="15dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Valider Externe"
        android:id="@+id/buttonExterneValidation"
        android:textSize="@dimen/size_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#75ffffff"/>
</RelativeLayout>