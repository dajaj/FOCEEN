<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/foceen">

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Centrale"
        android:id="@+id/buttonCentrale"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="155dp"
        android:layout_marginStart="155dp"
        android:layout_toLeftOf="@+id/buttonChoixEvent"
        android:layout_toStartOf="@+id/buttonChoixEvent"
        android:layout_alignBottom="@+id/buttonChoixEvent"
        android:background="#50ffffff"
        android:textColor="#000000"
        android:textSize="@dimen/size_button"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Autres"
        android:id="@+id/buttonAutres"
        android:layout_marginRight="155dp"
        android:layout_marginEnd="155dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/buttonChoixEvent"
        android:layout_toEndOf="@+id/buttonChoixEvent"
        android:layout_alignBottom="@+id/buttonChoixEvent"
        android:background="#50ffffff"
        android:textColor="#000000"
        android:textSize="@dimen/size_button"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@+id/buttonCentrale"
        android:layout_toLeftOf="@+id/buttonAutres"
        android:layout_toStartOf="@+id/buttonAutres" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Valider choix evenement"
        android:id="@+id/buttonChoixEvent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/choix_button_margin_bottom"
        android:layout_centerHorizontal="true"
        android:background="#50ffffff"
        android:textColor="#000000"
        android:textSize="@dimen/size_button"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textViewAcceuil"
        android:layout_alignTop="@+id/spinner"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="@dimen/size_informatif"/>
</RelativeLayout>