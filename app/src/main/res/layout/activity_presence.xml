<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".PresenceActivity"
    android:background="@drawable/foceen">

    <ListView
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:id="@+id/listViewPresence"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#50ffffff"/>

    <EditText
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:id="@+id/editTextPresence"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/listView"
        android:layout_alignStart="@+id/listView"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:hint="@string/recherche"
        android:background="#50ffffff"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="@dimen/size_text"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerPresence"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/editTextPresence"
        android:layout_toStartOf="@+id/editTextPresence"
        android:spinnerMode="dropdown"
        android:background="#50ffffff"
        android:layout_marginRight="10dp" />
</RelativeLayout>